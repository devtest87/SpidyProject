<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen" >

    <FrameLayout
        android:id="@+id/frameContentMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <LinearLayout
        xmlns:facebook="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
         xmlns:android="http://schemas.android.com/apk/res/android"
         android:background="@color/white">
        
        
        
        <LinearLayout 
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="@dimen/school_header"
            android:gravity="center_vertical"
            android:padding="5dp">
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOME"
                android:textSize="19sp" 
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/school_header"
            android:gravity="center_vertical"
            android:padding="5dp">
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yourprofile"
                android:textSize="19sp" 
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        
        <TextView android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/line"/>
        
        
        <LinearLayout 
            android:id="@+id/bookings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/school_header"
            android:gravity="center_vertical"
            android:padding="5dp">
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yourbooking"
                android:textSize="19sp" 
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        
        <TextView android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/line"/>
        
        <LinearLayout 
            android:id="@+id/groups"
            android:layout_width="match_parent"
            android:layout_height="@dimen/school_header"
            android:gravity="center_vertical"
            android:padding="5dp">
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yourgroups"
                android:textSize="19sp" 
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        
        <TextView android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/line"/>
        
        
         <LinearLayout 
            android:id="@+id/alerts"
            android:layout_width="match_parent"
            android:layout_height="@dimen/school_header"
            android:gravity="center_vertical"
            android:padding="5dp">
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/youralerts"
                android:textSize="19sp" 
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        
        <TextView android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/line"/>
       
        
        <LinearLayout 
            android:id="@+id/services"
            android:layout_width="match_parent"
            android:layout_height="@dimen/school_header"
            android:gravity="center_vertical"
            android:padding="5dp">
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yorservices"
                android:textSize="19sp" 
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        
        <TextView android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/line"/>
        
        
        <LinearLayout 
            android:id="@+id/comments"
            android:layout_width="match_parent"
            android:layout_height="@dimen/school_header"
            android:gravity="center_vertical"
            android:padding="5dp">
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yourcomments"
                android:textSize="19sp" 
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        
        <TextView android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/line"/>
        
        <LinearLayout 
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/school_header"
            android:gravity="center_vertical"
            android:padding="5dp">
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yoursettings"
                android:textSize="19sp" 
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        
    </LinearLayout>
        
        
</android.support.v4.widget.DrawerLayout>