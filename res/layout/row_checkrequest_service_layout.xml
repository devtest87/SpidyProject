<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:padding="5dp"
    android:background="@color/request_service_bg_color">

    <ImageView
        android:id="@+id/iv_serviceicon"
        android:layout_width="70dp"
        android:scaleType="center"
        android:src="@drawable/ic_launcher"
        android:layout_height="70dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/iv_serviceicon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_service_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electician"
            android:textColor="@color/request_service_text_heading_color"
            android:textSize="@dimen/rwa_title_test_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_service_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/request_service_text_color"
            android:text="12 HOUR AGO"
            android:textSize="@dimen/rwa_title_test_size" />
        
        <TextView
            android:id="@+id/tv_service_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/request_service_text_color"
            android:text="Electricity is not working for more than a week"
            android:textSize="@dimen/rwa_title_test_size" />
        <TextView
            android:id="@+id/tv_service_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/request_service_text_color"
            android:text="Please check asap"
            android:textSize="@dimen/rwa_title_test_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_service_status_title"
                android:layout_width="wrap_content"
                android:textColor="@color/request_service_text_color"
                android:layout_height="wrap_content"
                android:text="STATUS:"
                android:textStyle="bold" 
                android:textSize="@dimen/rwa_title_test_size" />

            <TextView
                android:id="@+id/tv_service_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/request_service_text_color"
                android:text="Pending"
                android:textSize="@dimen/rwa_title_test_size"
                />
        </LinearLayout>

       <TextView
            android:id="@+id/tv_service_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background="@drawable/shape_rect_circular_darkgrey_corner"
            android:text="DELETE RQUEST"
            android:textSize="@dimen/rwa_title_test_size" />
    </LinearLayout>

</RelativeLayout>