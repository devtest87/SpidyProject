<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/tv_vote1"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="40dp"
                android:background="@drawable/shape_rect_circular_blue_corner"
                android:textColor="@color/white"
                android:textSize="@dimen/rwa_description_test_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/tv_vote2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/shape_rect_circular_red_corner"
                android:textColor="@color/white"
                android:textSize="@dimen/rwa_description_test_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_vote3"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="40dp"
                android:background="@drawable/shape_rect_circular_header_corner"
                android:textColor="@color/white"
                android:textSize="@dimen/rwa_description_test_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>