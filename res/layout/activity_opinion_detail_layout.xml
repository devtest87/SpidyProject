<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/header_background_color"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_header"
        layout="@layout/include_common_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <ImageView
                android:id="@+id/iv_opinion"
                android:layout_width="match_parent"
                android:layout_height="250dp" >
            </ImageView>

            <TextView
                android:id="@+id/tv_opiniontitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="sasasasas"
                android:textSize="@dimen/rwa_title_test_size"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_vote_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <TextView
                android:id="@+id/tv_postandenddate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/rwa_description_test_size"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>